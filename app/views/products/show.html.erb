
<h2 class="title is-2">
  <% if @show_link %>
    <%= link_to @product.name, @product %>
  <% else %>
    <%= @product.name %>
  <% end %>
</h2>

<table class="table is-2">
<thead>
  <tr>
    <th><%= link_to 'Category', categories_index_path %></th>
    <th>Name</th>
    <th>Quantity per unit</th>
    <th>Unit price</th>
    <th>Unit stock</th>
  </tr>
</thead>

  <tbody>
      <tr>
          <td><%= @product.category.name %></td>
          <td><%= @product.name %></td>
          <td><%= @product.quantity_per_unit %></td>
          <td><%= @product.unit_price %></td>
          <td><%= @product.unit_stock %></td>
          <td><%= button_to 'buy now', checkout_create_path, params: {id: @product.id}, remote: true %></td>
          <% if @cart.include?(@product) %>
            <td><%= button_to 'remove from cart', remove_from_cart_path(@product), method: :delete %></td>
          <% else %>
            <td><%= link_to 'add to cart', add_to_cart_path(@product.id), method: :post %></td>
          <% end %>
      </tr>
  </tbody>
</table>

<%= link_to 'Back', :back %>
